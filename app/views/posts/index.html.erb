<% @posts.each do |post| %>
  <article id="post">
    <h2><%= link_to post.title, post %></h2>
    <p>postado por <span id="author"><%= post.author %></span> Ã s <%= post.pubdate.strftime("%H:%M") %></p>
    <time datetime="<%=post.pubdate.strftime("%Y-%B-%d")%>" class="year" pubdate><%= post.pubdate.strftime("%Y") %></time>
    <time class="month"><%= post.pubdate.strftime("%b") %></time>
    <time class="day"><%= post.pubdate.strftime("%d") %></time>
    <p><%= post.body %></p>
    <p><%= post.tags %></p>
  </article>
<% end %>

