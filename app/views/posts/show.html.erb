<p id="notice"><%= notice %></p>

<article id="post">
  <h1><%= link_to @post.title, @post %></h1>
  <p>postado por <%= @post.author %> Ã s <%= @post.pubdate.strftime("%H:%M") %></p>
  <time datetime="<%=@post.pubdate.strftime("%Y-%m-%d")%>" pubdate><%= @post.pubdate.strftime("%Y-%m-%d") %></time>
  <p><%= @post.body %></p>
