<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "erros") %> impediram esse post de ser salvo:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Titulo" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Corpo" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :tags, "Tags" %><br />
    <%= f.text_field :tags %>
  </div>
  <div class="field">
    <%= f.label :author, "Autor" %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :pubdate %><br />
    <%= f.datetime_select :pubdate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
